<script src="/js/empresas/cadastrar.js"></script>

<div class="container">
    <h1>Cadastro de Empresas</h1>
    <div>
        <% if (typeof msg != "undefined") { %>             
            <span  ><%= msg %></span>
        <% } %>
    </div>
    <div>
        <div>
                <div class="form-group">
                    <label for="empresaNome" class="form-label">Nome</label>
                    <input type="text" class="form-control" id="empresaNome" name="empresaNome">
                </div>
            </div>
            <div>
                <div class="form-group">
                    <label for="empresaCNPJ" class="form-label">CNPJ</label>
                    <input type="text" class="form-control" id="empresaCNPJ" name="empresaCNPJ">
                </div>
            </div>
            <div>
                <div class="form-group">
                    <label for="empresaTelefone" class="form-label">Telefone</label>
                    <input type="text" class="form-control" id="empresaTelefone" name="empresaTelefone">
                </div>
            </div>
            <div>
                <div class="form-group">
                    <label for="empresaEmail" class="form-label">Email</label>
                    <input type="text" class="form-control" id="empresaEmail" name="empresaEmail">
                </div>
            </div>
            <div>
                <div class="form-group">
                    <label for="empresaEndereco" class="form-label">Endereco</label>
                    <input type="text" class="form-control" id="empresaEndereco" name="empresaEndereco">
                </div>
            </div>
            <div>
                <div class="form-group">
                    <label for="empresaCidade" class="form-label">Cidade</label>
                    <input type="text" class="form-control" id="empresaCidade" name="empresaCidade">
                </div>
            </div>
            <div>
                <div class="form-group">
                    <label for="empresaEstado" class="form-label">Estado</label>
                    <input type="text" class="form-control" id="empresaEstado" name="empresaEstado">
                </div>
            </div>
            <div>
                <div class="form-group">
                    <label for="empresaCEP" class="form-label">CEP</label>
                    <input type="text" class="form-control" id="empresaCEP" name="empresaCEP">
                </div>
            </div>

            <div>
                <button class="btn btn-primary" id="btnCadastrar" type="button">Cadastrar</button>
                <a class="btn btn-secondary" href="/empresas">Voltar</a>
            </div>
        </div>
    </div>
</div>