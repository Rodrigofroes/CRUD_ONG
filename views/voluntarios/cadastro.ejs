<script src="/js/voluntarios/cadastrar.js"></script>

<div class="container">
    <h1>Cadastro de voluntarios</h1>
    <div>
        <% if (typeof msg !="undefined" ) { %>
            <span>
                <%= msg %>
            </span>
            <% } %>
    </div>
    <div>
        <div>
            <div class="form-group">
                <label for="voluntarioNome" class="form-label">Nome</label>
                <input type="text" class="form-control" id="voluntarioNome" name="voluntarioNome">
            </div>
        </div>
        <div>
            <div class="form-group">
                <label for="voluntarioEmail" class="form-label">Email</label>
                <input type="text" class="form-control" id="voluntarioEmail" name="voluntarioEmail">
            </div>
        </div>
        <div>
            <div class="form-group">
                <label for="voluntarioTelefone" class="form-label">Telefone</label>
                <input type="text" class="form-control" id="voluntarioTelefone" name="voluntarioTelefone">
            </div>
        </div>
        <div>
            <div class="form-group">
                <label for="voluntarioDataNasc" class="form-label">Data Nascimento</label>
                <input type="date" class="form-control" id="voluntarioDataNasc" name="voluntarioDataNasc">
            </div>
        </div>
        <div>
            <div class="form-group">
                <label for="voluntarioEndereco" class="form-label">Endereco</label>
                <input type="text" class="form-control" id="voluntarioEndereco" name="voluntarioEndereco">
            </div>
        </div>
        <div>
            <div class="form-group">
                <label for="voluntarioCEP" class="form-label">CEP</label>
                <input type="text" class="form-control" id="voluntarioCEP" name="voluntarioCEP">
            </div>
        </div>

        <div>
            <button class="btn btn-primary" id="btnCadastrar" type="button">Cadastrar</button>
            <a class="btn btn-secondary" href="/voluntarios">Voltar</a>
        </div>
    </div>
</div>
</div>